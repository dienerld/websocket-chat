{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@@/*": [
        "./*"
      ],
      "~/*": [
        "./src/*"
      ],
      "@env": [
        "./src/env.ts"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@http/*": [
        "./src/http/*"
      ]
    }
  }
}
